# AI Sales Enablement Platform - Production Environment Variables

# ==========================================
# üîê SECURITY CONFIGURATION (CRITICAL)
# ==========================================

# JWT Authentication Secret (MUST be secure in production)
JWT_SECRET="your-super-secure-jwt-secret-key-minimum-32-characters-long"

# NextAuth Secret (MUST be unique and secure)
NEXTAUTH_SECRET="your-super-secure-nextauth-secret-minimum-32-characters-long"

# Application URL (MUST match your domain)
NEXTAUTH_URL="https://your-production-domain.com"

# ==========================================
# üóÑÔ∏è DATABASE CONFIGURATION
# ==========================================

# PostgreSQL Database URL
DATABASE_URL="postgresql://prod_user:secure_password@postgres:5432/ai_sales_enablement_prod"

# Database credentials (used by Docker Compose)
POSTGRES_DB=ai_sales_enablement_prod
POSTGRES_USER=prod_user
POSTGRES_PASSWORD=your_secure_database_password

# ==========================================
# üöÄ REDIS CONFIGURATION
# ==========================================

# Redis URL for caching and sessions
REDIS_URL="redis://redis:6379"

# Redis password (optional, but recommended)
# REDIS_PASSWORD="your_redis_password"

# ==========================================
# ü§ñ AZURE OPENAI CONFIGURATION
# ==========================================

# Azure OpenAI API Key (REQUIRED for AI features)
AZURE_OPENAI_API_KEY="your-azure-openai-api-key"

# Azure OpenAI Endpoint
AZURE_OPENAI_ENDPOINT="https://your-resource-name.openai.azure.com/"

# Azure OpenAI API Version
AZURE_OPENAI_API_VERSION="2024-02-15-preview"

# Model deployment names (customize based on your Azure deployments)
AZURE_OPENAI_CHAT_MODEL="gpt-4"
AZURE_OPENAI_EMBEDDING_MODEL="text-embedding-ada-002"

# ==========================================
# üåê APPLICATION CONFIGURATION
# ==========================================

# Environment
NODE_ENV=production

# Application port (usually handled by Docker)
PORT=3000

# Disable Next.js telemetry in production
NEXT_TELEMETRY_DISABLED=1

# ==========================================
# üìä MONITORING CONFIGURATION
# ==========================================

# Grafana admin password
GRAFANA_PASSWORD="secure_grafana_admin_password"

# Enable monitoring (set to 'true' to enable Prometheus/Grafana)
ENABLE_MONITORING=true

# ==========================================
# üîî NOTIFICATION CONFIGURATION (OPTIONAL)
# ==========================================

# SMTP settings for email notifications
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_USER="your-email@gmail.com"
# SMTP_PASSWORD="your-app-password"
# SMTP_FROM="AI Sales Platform <noreply@your-domain.com>"

# Slack webhook for alerts (optional)
# SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK"

# ==========================================
# üîß PERFORMANCE TUNING
# ==========================================

# Node.js memory settings
NODE_OPTIONS="--max-old-space-size=2048"

# Database connection pool size
DATABASE_POOL_SIZE=10

# Redis connection pool size
REDIS_POOL_SIZE=10

# API rate limiting (requests per minute)
API_RATE_LIMIT=100

# File upload limits (in MB)
MAX_FILE_SIZE=10

# ==========================================
# üê≥ DOCKER CONFIGURATION
# ==========================================

# Docker image registry (if using private registry)
# DOCKER_REGISTRY="your-registry.com"
# DOCKER_IMAGE_TAG="latest"

# ==========================================
# üöÄ DEPLOYMENT CONFIGURATION
# ==========================================

# Deployment environment identifier
DEPLOYMENT_ENV=production

# Build timestamp (automatically set by CI/CD)
# BUILD_TIMESTAMP=2024-01-01T00:00:00Z
# BUILD_VERSION=1.0.0
# GIT_COMMIT_SHA=abcdef123456

# ==========================================
# üîç LOGGING CONFIGURATION
# ==========================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# Log format (json, pretty)
LOG_FORMAT=json

# ==========================================
# üõ°Ô∏è SECURITY HEADERS
# ==========================================

# Content Security Policy
CSP_ENABLED=true

# CORS origins (comma-separated)
CORS_ORIGINS="https://your-domain.com,https://www.your-domain.com"

# ==========================================
# üì± FEATURE FLAGS
# ==========================================

# Enable experimental features
# ENABLE_BETA_FEATURES=false

# Enable AI-powered suggestions
ENABLE_AI_SUGGESTIONS=true

# Enable file upload
ENABLE_FILE_UPLOAD=true

# Enable user registration
ENABLE_USER_REGISTRATION=true

# ==========================================
# üåç INTERNATIONALIZATION
# ==========================================

# Default language
DEFAULT_LANGUAGE=zh-TW

# Supported languages (comma-separated)
SUPPORTED_LANGUAGES="zh-TW,en-US"

# ==========================================
# üíæ BACKUP CONFIGURATION
# ==========================================

# Enable automatic backups
# ENABLE_AUTO_BACKUP=true

# Backup schedule (cron format)
# BACKUP_SCHEDULE="0 2 * * *"

# Backup retention days
# BACKUP_RETENTION_DAYS=30

# Backup storage location
# BACKUP_STORAGE_PATH="/backups"

# ==========================================
# üîê SSL/TLS CONFIGURATION
# ==========================================

# SSL certificate paths (if not using reverse proxy)
# SSL_CERT_PATH="/etc/ssl/certs/cert.pem"
# SSL_KEY_PATH="/etc/ssl/private/key.pem"

# Force HTTPS redirect
FORCE_HTTPS=true

# ==========================================
# üìà ANALYTICS CONFIGURATION (OPTIONAL)
# ==========================================

# Google Analytics ID
# GA_TRACKING_ID="GA-XXXXXXXXX"

# Enable usage analytics
# ENABLE_ANALYTICS=false

# ==========================================
# ‚ö†Ô∏è SECURITY NOTES
# ==========================================
#
# 1. NEVER commit this file with real credentials to version control
# 2. Use environment-specific files (.env.production, .env.staging)
# 3. Rotate secrets regularly (especially JWT_SECRET and API keys)
# 4. Use strong passwords (minimum 16 characters, mixed case, numbers, symbols)
# 5. Consider using external secret management services (AWS Secrets Manager, etc.)
# 6. Review and audit all environment variables before deployment
# 7. Enable monitoring and alerting for security events
#
# ==========================================